@theme "catppuccin-default"

configuration{
    modi: "run,drun,window,combi";
    combi-modes: [run,drun,window];
    icon-theme: "Oranchelo";
    show-icons: true;
    terminal: "ghostty";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-combi: " 🖥️  All";
    display-run: " 🏃  Run";
    display-drun: " 📱 Apps";
    display-window: " 🪟  Window";
    sidebar-mode: true;
}
